<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


    <ImageButton
        android:id="@+id/dosePlusButtonAdd"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_add_circle_outline_black_24dp"
        android:layout_marginRight="10dp"
        android:layout_toStartOf="@+id/textViewDoseAdd"
        android:layout_alignBottom="@+id/textViewDoseAdd" />

    <ImageButton
        android:id="@+id/doseMinusButtonAdd"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_remove_circle_outline_black_24dp"
        android:layout_marginRight="5dp"
        android:layout_alignTop="@+id/dosePlusButtonAdd"
        android:layout_alignParentEnd="true"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="1"
        android:id="@+id/textViewDoseAdd"
        android:paddingLeft="8dp"
        android:textSize="25sp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/doseMinusButtonAdd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Time"
        android:id="@+id/textViewPickTimes"
        android:layout_alignBottom="@+id/dosePlusButtonAdd"
        android:layout_alignParentStart="true" />


</RelativeLayout>